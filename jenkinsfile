pipeline {
    agent {  label 'tomcat' }
    triggers {  cron '* * * * * ' }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/artisantek/java-example.git'
            }
        }

        stage('test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('build') {
            steps {
                echo 'mvn clean install'
            }
        }

        stage('Deploy') {
            steps {
                sh 'sudo cp target/works-with-heroku-1.0.war /opt/tomcat/apache-tomcat-9.0.68/webapps/'
            }
        }

    }

}
