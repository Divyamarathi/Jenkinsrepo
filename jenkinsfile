pipeline{

agent {
  label 'build'
  }
stages {
  	stage('checkout') {
    		steps {
      			git branch: 'main', url: 'https://github.com/sruthichandalada/java-example-fork.git'
    		}
  	}

  	stage('test') {
    		steps {
      			echo "this is the test case"
    		}
  	}

  	stage('build') {
    		steps {
      			sh 'mvn clean package'
    		}
  	}
	
	stage('deploy') {
    		steps {
      			sh 'sudo cp target/*.war /opt/tomcat/apache-tomcat-9.0.98/webapps'
    		}
  	}

}


}
